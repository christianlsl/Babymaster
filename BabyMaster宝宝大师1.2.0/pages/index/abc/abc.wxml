<view class="abc-container">

  <view class="head">
    <image class="title" src="cloud://lsl-9g4aoh8je342d9be.6c73-lsl-9g4aoh8je342d9be-1309803856/abc_img/title.png"></image>
    <image class="phonetic_hidden" src="cloud://lsl-9g4aoh8je342d9be.6c73-lsl-9g4aoh8je342d9be-1309803856/abc_img/phonetic_hidden.png" bindtap="phonetic_hidden"></image>
  </view>

  <view class="abc_box">
    <view class="wordsection" wx:for="{{alphabet}}" wx:key="item">
      <text class="word">{{item.name}}</text>
      <text class="wordkk" hidden="{{phonetic_hidden2}}">{{item.phonetic}}</text>
      <view class="wordsound">
        <image class="img" src="cloud://lsl-9g4aoh8je342d9be.6c73-lsl-9g4aoh8je342d9be-1309803856/abc_img/btn_videoPlay.png" bindtap="audioPlay" data-url="{{item.name}}" />
      </view>
    </view>
  </view>
</view>




